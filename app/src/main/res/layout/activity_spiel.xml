<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hintergrund_spiel"
    tools:context=".Spiel">


    <Button
        android:id="@+id/btnAnswer1"
        android:layout_width="185dp"
        android:layout_height="110dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/topic_button_border"
        android:text="Berlin"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnAnswer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnAnswer"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnAnswer"
        android:layout_width="185dp"
        android:layout_height="110dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"

        android:layout_marginBottom="16dp"
        android:background="@drawable/topic_button_border"
        android:text="Berlin"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/btnAnswer2"
        app:layout_constraintEnd_toStartOf="@+id/btnAnswer1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtVTimer"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/btnAnswer3"
        android:layout_width="185dp"
        android:layout_height="110dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/topic_button_border"
        android:text="Berlin"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnAnswer2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnAnswer2"
        app:layout_constraintTop_toTopOf="@+id/btnAnswer2"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnAnswer2"
        android:layout_width="185dp"
        android:layout_height="110dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/topic_button_border"
        android:text="Bern"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnAnswer3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAnswer"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textVFrage"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="11dp"
        android:background="@drawable/schriftrolle"
        android:fontFamily="casual"
        android:paddingLeft="25dp"
        android:paddingTop="18dp"
        android:text="Wie heisst die Hauptstadt von Frankreich?"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtVTimer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/imageView"
        android:layout_width="407dp"
        android:layout_height="207dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/main_game"
        app:layout_constraintBottom_toTopOf="@+id/textVFrage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtVTimer"
        android:layout_width="130dp"
        android:layout_height="80dp"

        android:layout_marginBottom="25dp"
        android:background="@drawable/sanduhr_neu"
        android:paddingLeft="40dp"
        android:paddingTop="26dp"
        android:text="00:30"
        android:textColor="#F6F0F0"
        android:textSize="24sp"
        android:textStyle="bold"
        app:autoSizeMinTextSize="60dp"
        app:layout_constraintBottom_toTopOf="@+id/btnAnswer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textVFrage" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>