<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background=" #c8eef8 "

    >

    <Button
        android:id="@+id/btnTopic"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="65dp"
        android:background="@drawable/banner6"
        app:layout_constraintBottom_toBottomOf="@+id/btnTopic1"
        app:layout_constraintEnd_toStartOf="@+id/btnTopic5"
        app:layout_constraintStart_toEndOf="@+id/btnTopic2"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="99dp"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginBottom="27dp"
        android:text="Choose a land to conquer"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnTopic2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="430dp"
        android:layout_height="0dp"
        android:layout_marginBottom="273dp"
        android:alpha="0.75"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnTopic5"
        app:layout_constraintStart_toStartOf="@+id/btnTopic5"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/world_map" />

    <Button
        android:id="@+id/btnTopic4"
        android:layout_width="45dp"
        android:layout_height="65dp"
        android:layout_marginEnd="68dp"
        android:layout_marginRight="68dp"
        android:background="@drawable/banner4"
        app:layout_constraintBottom_toTopOf="@+id/btnTopic1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/btnTopic1"
        app:layout_constraintTop_toBottomOf="@+id/btnTopic2" />

    <Button
        android:id="@+id/btnTopic1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="76dp"
        android:layout_marginLeft="76dp"
        android:layout_marginEnd="69dp"
        android:layout_marginRight="69dp"
        android:layout_marginBottom="379dp"
        android:background="@drawable/banner5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnTopic3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTopic4" />

    <Button
        android:id="@+id/btnTopic2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="65dp"
        android:layout_marginLeft="65dp"
        android:layout_marginEnd="34dp"
        android:layout_marginRight="34dp"
        android:background="@drawable/banner1"
        app:layout_constraintBottom_toTopOf="@+id/btnTopic4"
        app:layout_constraintEnd_toStartOf="@+id/btnTopic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btnTopic3"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="176dp"
        android:layout_marginRight="176dp"
        android:alpha="2.5"
        android:background="@drawable/banner2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnTopic1"
        app:layout_constraintTop_toBottomOf="@+id/btnTopic" />

    <Button
        android:id="@+id/btnTopic5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="161dp"
        android:layout_marginRight="161dp"
        android:background="@drawable/banner3"
        app:layout_constraintBottom_toTopOf="@+id/btnTopic4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnTopic"
        app:layout_constraintTop_toTopOf="@+id/btnTopic2" />


</androidx.constraintlayout.widget.ConstraintLayout>