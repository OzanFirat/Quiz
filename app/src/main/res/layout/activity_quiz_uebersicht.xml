<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".quizUebersicht">

    <Button
        android:id="@+id/btnTopic3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Topic 3"
        app:layout_constraintBottom_toTopOf="@+id/btnTopic4"
        app:layout_constraintEnd_toEndOf="@+id/btnTopic4"
        app:layout_constraintStart_toStartOf="@+id/btnTopic4"
        app:layout_constraintTop_toBottomOf="@+id/btnTopic2" />

    <Button
        android:id="@+id/btnTopic4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:layout_marginBottom="394dp"
        android:text="Topic 4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTopic3" />

    <Button
        android:id="@+id/btnTopic2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Topic 2"
        app:layout_constraintBottom_toTopOf="@+id/btnTopic3"
        app:layout_constraintEnd_toEndOf="@+id/btnTopic3"
        app:layout_constraintStart_toStartOf="@+id/btnTopic3"
        app:layout_constraintTop_toBottomOf="@+id/btnTopic1" />

    <Button
        android:id="@+id/btnTopic1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="93dp"
        android:text="Topic 1"
        app:layout_constraintBottom_toTopOf="@+id/btnTopic2"
        app:layout_constraintEnd_toEndOf="@+id/btnTopic2"
        app:layout_constraintStart_toStartOf="@+id/btnTopic2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose your Quiz Topic"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="29dp" />
</androidx.constraintlayout.widget.ConstraintLayout>